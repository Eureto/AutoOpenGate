<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="eureto.opendoor.ui.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zaloguj się do eWeLink"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <!--
        W przypadku OAuth2 nie potrzebujesz pól email/hasło bezpośrednio w aplikacji,
        ponieważ logowanie odbywa się przez przeglądarkę na stronie eWeLink.
        Ten przycisk będzie rozpoczynał proces OAuth2.
    -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zaloguj przez eWeLink"
        android:padding="12dp"
        android:textSize="18sp" />

</LinearLayout>